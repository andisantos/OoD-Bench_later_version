
FROM pytorch/pytorch:1.3-cuda10.1-cudnn7-devel as base
ARG DEBIAN_FRONTEND=noninteractive

WORKDIR /src

RUN apt-get update && \
    apt-get install --yes software-properties-common && \
    apt-get install --yes \
    python3 \
    python3-numpy \
    python3-pip \
    python3-matplotlib \
    python3-opencv \
    python3-tqdm \
    python3-pil \
    screen \
    vim \
    git \
    && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

RUN pip install transformers
CMD ["/bin/bash"]
